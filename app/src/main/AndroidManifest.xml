<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.justinmutsito.coolquotes.coolquotes"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".WelcomeActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".Categories.CategoriesActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".People.PeopleActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".Favourites.FavouritesActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".Settings.SettingsActivity"
                  android:screenOrientation="portrait"
                  android:parentActivityName=".WelcomeActivity">
        </activity>
    </application>

</manifest>