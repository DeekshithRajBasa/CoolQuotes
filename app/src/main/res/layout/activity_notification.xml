<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.justinmutsito.coolquotes.coolquotes.Notifications.NotificationActivity"
    >

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/brown_bg"
        />
    <ImageView
        android:id="@+id/fadedImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:src="@color/brownFaded"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_account_circle_grey600_48dp"
        android:layout_marginTop="120dp"
        android:id="@+id/faceImageView"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_text"
        android:id="@+id/quoteLabel"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorSecondaryText"
        android:textSize="17sp"
        android:layout_below="@+id/faceImageView"
        android:layout_alignParentStart="true"/>




</RelativeLayout>
