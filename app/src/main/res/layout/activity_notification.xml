<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NotificationActivity"
    >

    <ImageView
        android:id="@+id/fadedImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:src="@color/brownFaded"
        />

    <TextView
        android:id="@+id/dayQuoteLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fadedImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/quote_of_the_day"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <ImageView
        android:id="@+id/faceImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/dayQuoteLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:foregroundGravity="center"
        android:padding="5dp"
        android:src="@drawable/bg_charles_dickens"/>

    <TextView
        android:id="@+id/quoteLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/faceImageView"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        android:text="@string/test_text"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryText"
        android:textSize="17sp"/>


</RelativeLayout>
